<resources>

    <style name="ToolbarBackground" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarBackground_Dark" parent="DarkTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TabWhite" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabBackground">@color/tabWhite</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>

    <style name="TabDark" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabBackground">@color/tabDark</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

</resources>
