<resources>

    <style name="LineCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">#808080</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="TimerButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>